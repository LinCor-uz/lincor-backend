{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "src",
  "paths": {
    "@controllers/*": [
      "controllers/*"
    ],
    "@models/*": [
      "models/*"
    ],
    "@utils/*": [
      "utils/*"
    ],
    "@routes/*": [
      "routes/*"
    ],
    "@services/*": [
      "services/*"
    ],
    "@middlewares/*": [
      "middlewares/*"
    ],
    "@config/*": [
      "config/*"
    ]
  }
}
